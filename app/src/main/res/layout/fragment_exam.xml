<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view_exam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rectangle_with_corner_color_light"
        ads:layout_constraintBottom_toBottomOf="@+id/constraint_layout_legend_container"
        ads:layout_constraintEnd_toStartOf="@+id/constraint_layout_legend_container"
        ads:layout_constraintVertical_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraint_layout_legend_container" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_legend_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        ads:layout_constraintBottom_toTopOf="@+id/view_shadow_list_top"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toEndOf="@+id/search_view_exam"
        ads:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_legend_past"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_0"
            android:drawablePadding="@dimen/padding_8"
            android:gravity="start|center_vertical"
            android:text="@string/exam_legend_past"
            android:textColor="@color/textLight"
            android:textSize="@dimen/text_small_body"
            ads:layout_constraintBottom_toTopOf="@+id/text_view_legend_today"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintHorizontal_bias="0.0"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="parent"
            app:drawableStartCompat="@drawable/ic_legend"
            app:drawableTint="@color/textLight"
            app:fontFamily="@font/semi_bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_legend_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_4"
            android:drawablePadding="@dimen/padding_8"
            android:gravity="start|center_vertical"
            android:text="@string/exam_legend_today"
            android:textColor="@color/colorAlternativeGreen"
            android:textSize="@dimen/text_small_body"
            ads:layout_constraintBottom_toTopOf="@+id/text_view_legend_future"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintHorizontal_bias="0.0"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toBottomOf="@+id/text_view_legend_past"
            app:drawableStartCompat="@drawable/ic_legend"
            app:drawableTint="@color/colorAlternativeGreen"
            app:fontFamily="@font/semi_bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_legend_future"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:drawablePadding="@dimen/padding_8"
            android:gravity="start|center_vertical"
            android:text="@string/exam_legend_future"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_small_body"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintHorizontal_bias="0.0"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toBottomOf="@+id/text_view_legend_today"
            app:drawableStartCompat="@drawable/ic_legend"
            app:drawableTint="@color/colorPrimary"
            app:fontFamily="@font/semi_bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_shadow_list_top"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/drop_shadow"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view_exam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout_legend_container"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_exam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        ads:layout_constraintTop_toBottomOf="@+id/view_shadow_list_top"
        app:layout_constraintBottom_toTopOf="@+id/banner_ad_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_exam" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_empty_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:text="@string/no_item_found"
        android:textColor="@color/textRegular"
        android:textSize="@dimen/textParagraphTitle"
        android:visibility="gone"
        app:fontFamily="@font/semi_bold"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_view_exam"
        app:layout_constraintEnd_toEndOf="@+id/recycler_view_exam"
        app:layout_constraintStart_toStartOf="@+id/recycler_view_exam"
        app:layout_constraintTop_toTopOf="@+id/recycler_view_exam" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/banner_ad_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        ads:adSize="BANNER"
        ads:adUnitId="@string/exam_ad_unit_id"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/recycler_view_exam" />

</androidx.constraintlayout.widget.ConstraintLayout>
